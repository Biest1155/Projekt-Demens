@model Projekt_Demens.Models.News
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>

</head>

<body>
<h1>Tilføj nyhed</h1>

<fieldset>

    <form asp-action="AddNews" asp-controller="Therapist">

        <div asp-validation-summary="ModelOnly" class="input-validation-error"></div>

        <p style="font:bold">
            Overskrift
            <input style="width: 70%" asp-for="HeadLine" class="form-control" placeholder="Indtast overskriften her"/>
            <span asp-validation-for="HeadLine"></span>
        </p>
        <br/>
        
        <p style="font:bold">
            Indhold
            <textarea style="height: 160px;width: 70%" asp-for="Body" class="form-control" placeholder="Skriv indholdet her"></textarea>

            <span asp-validation-for="Body"></span>
        </p>

        

        <p >
            <button type="submit">Gem nyhed </button>
        </p>

    </form>

</fieldset>
</body>
</html>
