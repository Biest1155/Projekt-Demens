@foreach (var p in Model)
{
    <div class="speech">
        
            @if (p.TerapeutIsAuthor == true)
            {
        <div style="float: right">
            <div class="triangle-blue">
                <p>
                   @p.Content
                </p>
            </div>
        </div>
            }
        else 
        { 
        <div style="float: left">
            <div class="triangle-red">
                <p>@p.Content</p>
            </div>
        </div>
        }
        
    </div>
}
